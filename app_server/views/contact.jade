doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title contact page
    link(rel="icon", type="image/png", href='/images/android-chrome-192x192.png')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", rel="stylesheet")
    link(href="https://cdn.jsdelivr.net/npm/simplebar@5.3.0/dist/simplebar.min.css", rel="stylesheet")
    script(src="https://cdn.jsdelivr.net/npm/simplebar@5.3.0/dist/simplebar.min.js")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
    script.
      const navLinks = document.querySelectorAll(".navbar-nav a.nav-link");
      navLinks.forEach(link => {
        link.addEventListener("click", event => {
          event.preventDefault();
          const target = document.querySelector(link.getAttribute("href"));
          if (target) {
            window.scrollTo({
              top: target.offsetTop,
              behavior: "smooth"
            });
          }
        });
      })

    style.
      /* Custom styles */
      body {
        background-color:rgb(52, 175, 192);
      }
      .simplebar-scrollbar::before {
        background-color: #f06292;
      }
      .simplebar-track.simplebar-horizontal {
        background-color: #f06292;
      }
      .simplebar-track.simplebar-vertical {
        background-color: white;
      }
      .navbar-custom {
        background-color: #333;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .navbar-custom .navbar-brand {
        color: #f06292;
        font-size: 24px;
        font-family: 'Pacifico', cursive;
      }
      .navbar-custom .nav-link {
        color: #ffffff;
        font-size: 16px;
        transition: color 0.3s;
      }
      .navbar-custom .nav-link:hover {
        color: #f06292;
      }
      /* Set background color for About Us page */
      .About Us-page {
        background-color: #f06292;
        color: #ffffff;
        padding: 50px;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        .navbar-brand
          a.logo(href='/') Weather Blog
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/Forecast') Forecast
            li.nav-item
              a.nav-link(href='/Articles') Articles
            li.nav-item
              a.nav-link(href='/AboutUs') About Us
            li.nav-item
              a.nav-link(href='/contact') Contact
          .search-box.navbar-nav
            form.form-inline.my-2.my-lg-0
              input.form-control(type='text', placeholder='Search')
              button.btn.btn-outline-light(type='submit')
                i.fa.fa-search

    main.container.content
      .jumbotron.jumbotron-fluid.bg-primary.text-white.py-0
        .container.text-center
          h1.display-4 CONTACT US

      .container.mt-4
        .row
          .col-md-4
            form
              .form-group
                label(for='name') Your Name
                input#name.form-control(type='text', placeholder='Enter your name')
              .form-group
                label(for='email') Email Address
                input#email.form-control(type='email', placeholder='Enter your email address')
              .form-group
                label(for='message') Message
                textarea#message.form-control(rows='5', placeholder='Enter your message')
              button.btn.btn-primary(type='submit') Send Message

